{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "spring": {
    "application": {
      "name": "Microservices.Demo.Policy.API"
    },
    "cloud": {
      "timeout": "60000",
      "config": {
        "discovery": {
          "enabled": true,
          "serviceId": "microservices.demo.configserver"
        },
        "retry": {
          "enabled": true
        }
      }
    }
  },
  "eureka": {
    "client": {
      "serviceUrl": "http://microservices.demo.discoveryserver:8761/eureka",
      "shouldFetchRegistry": false,
      "shouldRegisterWithEureka": true,
      "validateCertificates": false
    },
    "instance": {
      "appName": "Microservices.Demo.Policy.API",
      "nonSecurePortEnabled": true,
      "port": "80",
      "securePortEnabled": false,
      "securePort": "443",
      "ipAddress": "microservices.demo.policy.api",
      "preferIpAddress": true
    }    
  }
}